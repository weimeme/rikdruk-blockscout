  ],
  "license": "MIT",
  "homepage": "https://github.com/blockscout/iframe#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blockscout/iframe"
  },
  "bugs": {
    "url": "https://github.com/blockscout/iframe/issues"
